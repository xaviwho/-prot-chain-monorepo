# Production Environment Variables for AWS EC2 Deployment

# Database Configuration
POSTGRES_DB=protchain_prod
POSTGRES_USER=protchain
POSTGRES_PASSWORD=your_secure_database_password_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters_long

# API Configuration
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
API_BASE_URL=http://backend:8080

# Application Environment
NODE_ENV=production
PORT=3000

# Domain Configuration (replace with your actual domain)
DOMAIN=yourdomain.com
WWW_DOMAIN=www.yourdomain.com

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Cloudflare Configuration (optional for additional security)
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here
